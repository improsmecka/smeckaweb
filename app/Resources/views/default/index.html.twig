                <a href="{{ path('fos_user_security_logout') }}">Odhlásit se</a><br>
            {% else %}                
                <a href="{{ path('fos_user_security_login') }}">Přihlásit se</a><br>
                <a href="{{ path('fos_user_registration_register') }}">Vytvořit nový účet</a><br>
                <a href="{{ path('fos_user_resetting_request') }}">Zapomenuté heslo</a>
            {% endif %}                                     

                
            </div>   
                
            </div>
            
        </div>
            
  
    
