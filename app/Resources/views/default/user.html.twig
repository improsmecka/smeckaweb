{% extends 'base.html.twig' %}
{% block title %}{{user.publicname}}|Improsmečka{% endblock %}

{% block body %}
   
     <div class="container">
        <div class="row">
            <div class="col-sm-1 col-xs-1 col-md-5 col-lg-4">
                <a href="{{ path('homepage') }}"><img class="img-responsive logo" src="{{ asset('img/logo.png')}}"></a>
                
            </div>
            <div class="col-sm-11 col-xs-11 col-md-7 col-lg-8">
        <h1>{{user.publicname}}</h1>
        <p>{{user.description}}</p>
         <div class="row">
             <h2>Body pro skupiny</h2>
                        {% if user.factionpoints[1]  %}
                            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4"><a href="{{ path('faction_vydry') }}"><img class="img-responsive" src="{{asset('img/vydra.png')}}"></a><p class="text-center" >{{user.factionpoints[1]}} bodů za Vydry</p> </div>
                        {% endif %}
                        {% if user.factionpoints[3]  %}
                            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4"><a href="{{ path('faction_neutral') }}"><img class="img-responsive" src="{{asset('img/logo.png')}}"></a><p class="text-center" >{{user.factionpoints[3]}} neutrálních bodů</p> </div>
                        {% endif %}
                        {% if user.factionpoints[2]  %}
                            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4"><a href="{{ path('faction_lisky') }}"><img class="img-responsive" src="{{asset('img/liska.png')}}"></a><p class="text-center" >{{user.factionpoints[2]}} bodů za Lišky</p> </div>
                        {% endif %}
         </div>
        <div>
            <h2>Výpis úspěchů</h2>
               {% for event in user.events %}
            <div class="uspech">
                 <img src="http://lorempixel.com/400/200/sports/{{loop.index0+1}}" alt="Chania">
      
                 <h3>{{event.title}} ({{event.points}}b)</h3>
            <p>{{event.action}}</p>
            <p>{{event.description}}</p>
            </div>    
        {% endfor %}
            
            
            </div>
            
            
        </div>
        
        
        </div>           
        </div>  
            
  
    
{% endblock %}

{% block stylesheets %}

{% endblock %}
