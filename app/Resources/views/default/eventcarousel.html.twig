<div id="myCarousel" class="carousel slide" data-ride="carousel">


  <!-- Indicators -->
  <ol class="carousel-indicators">
    {% for event in events %}
       <li data-target="#myCarousel" data-slide-to="{{loop.index0+1}}"
           {%if loop.first %}class="active"{% endif %}           
           ></li>
    {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    {% for event in events %}
        <div class="item {%if loop.first %}active{%endif %}">
          <img src="http://lorempixel.com/400/200/sports/{{loop.index0}}" >
          <div class="carousel-caption ">
              <h3><a href="{{ path('user_show', {'User':event.user.id}) }}" >{{event.user.publicname}}</a> : {{event.title}} ({{event.points}}b)</h3>
            <p>{{event.action}}</p>
            <p>{{event.description}}</p>
          </div>
        </div>
    {% endfor %}       
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
