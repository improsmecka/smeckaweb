{% extends 'base.html.twig' %}
{% block title %}{{Name}}|Improsmečka{% endblock %}

{% block body %}
   
     <div class="container">
        <div class="row">
            <div class="col-sm-1 col-xs-1 col-md-5 col-lg-4">
                <img class="img-responsive " 
                     {% if Icon == 1 %}
                         src="{{asset('img/vydra.png')}}"
{% elseif Icon == 2 %}
    src="{{asset('img/liska.png')}}"
{% else %}
    src="{{asset('img/logo.png')}}"
{% endif %}
                     
                     >
                
            </div>
            <div class="col-sm-11 col-xs-11 col-md-7 col-lg-8">
        <h1>{{Name}}</h1>
       
        <div>
            <h2>Výpis úspěchů</h2>
            {% for event in events %}
            <div class="uspech">
                 <img class="img-responsive" src="{{ asset('images/events/' ~ event.image) }}" >
      
                 <h3> <a href="{{ path('user_show', {'User':event.user.id}) }}">{{event.user.publicname}} </a> : {{event.title}} ({{event.points}}b)</h3>
            <p>{{event.action}}</p>
        
            </div>    
        {% endfor %}
            
            
            </div>
            
            
        </div>
        
        
        </div>           
        </div>  
            
  
    
{% endblock %}

